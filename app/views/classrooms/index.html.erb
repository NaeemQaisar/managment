<h1><b>Listing classrooms</b></h1>
<h2 class="usermail"><%= current_users_email %></h2>


<%= form_tag(classrooms_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Classroom" %>
      <i class="glyphicon glyphicon-search"></i>
      <%= submit_tag "Search", :name => nil %>
    </div>
<% end %>


<div class="btn-signout">
<%= button_to 'Sign Out', destroy_user_session_path, class: 'btn btn-danger btn-md', :method => :delete %>
</div>
<div class="table-responsive">
<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @classrooms.each do |classroom| %>
  <tr>
    <td><%= classroom.name %></td>
    <td><%= classroom.description %></td>
    <td><%= image_tag classroom.attachments.first.image.url(:thumb) if classroom.attachments.present?%></td>
    <td><%= link_to new_classroom_student_path(classroom.id), class: 'btn btn-success btn-md' do%>
       <i class="glyphicon glyphicon-plus"></i> Add A Student
       <% end %> 
    </td>
    <td><%= link_to 'Show', classroom, class: 'btn btn-primary btn-md' %></td>
    <td><%= link_to 'Edit', edit_classroom_path(classroom), class: 'btn btn-info btn-md' %></td>
    <td><%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-md' %></td>
  </tr>
<% end %>
</table>
</div>
<br />

<%= link_to new_classroom_path, class: 'btn btn-default btn-md' do %>
  <i class="glyphicon glyphicon-plus"></i> New Classroom
<% end %>
