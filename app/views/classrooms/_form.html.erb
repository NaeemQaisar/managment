<%= form_for(@classroom) do |f| %>
  <% if @classroom.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@classroom.errors.count, "error") %> prohibited this classroom from being saved:</h2>

      <ul>
      <% @classroom.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <div class="field">
        <%= f.fields_for :attachments do |image| %>
        <%= image.file_field :image %>
      <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "span2", placeholder: "Classroom Name" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <div class="field">
        <%= f.label :description %><br />
        <%= f.text_area :description %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8"
      <div class="actions">
        <%= f.submit %>
    </div>
  </div>  
</div>
<% end %>
